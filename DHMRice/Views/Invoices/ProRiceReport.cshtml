                        <th>Bags Used</th>
                        <th>Weight</th>
                        <th>Rate</th>
                        <th>Market Rate</th>





                    </tr>
                </thead>
                <tbody>
                    @{ var sr = 0;

                        var producebags = db.Rice_Produce_Bags.Where(r => r.Rice_Production_id == Model.Rice_Production_id).SingleOrDefault();

                        }
