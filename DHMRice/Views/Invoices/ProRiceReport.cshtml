                        //SumAmount += raw.rsc_price;

                        <tr>
                         

                            <td>@item.RawRice.Item_Name</td>
                            @*@{ var rate = item2.rsc_price / item2.rsc_qty; }*@

                            <td>@item.Purchase_Rice_BagsUsed</td>
                            <td>@item.Total_Weight</td>
                            <td>@item.Purchase_Rice_Rate</td>
                            <td>@item.Market_Rate</td>
                            @{  }


                            @*<td>Rs @pricing.PerBagPrice</td>
                                @{ var reamining = item.Bags_qty - item.Bags_Sold_qty; }
                                <td>@reamining</td>
                                <td>@item.packing.Packing_Type kg</td>*@

                        </tr>
                                }
                    <tr>                      
                        <th >ShortFall Description</th>
                  
                     
                        <th>Amount</th>
                    </tr>
@foreach (var item2 in db.Rice_Production_ShortFalls.Where(r => r.Rice_Produce_Bags_id == producebags.Rice_Produce_Bags_id).ToList())
{
                    <tr>
                     
                        <td>@item2.Rice_Production_ShortFall_name</td>
                        <td>@item2.Rice_Production_ShortFall_Amount</td>
                    </tr>
}
<tr>
    <th>Expenses</th>

    
    <th>Amount</th>
</tr>
@foreach (var item3 in db.Rice_Production_Expenses.Where(r => r.Rice_Produce_Bags_id == producebags.Rice_Produce_Bags_id).ToList())
{
    <tr>
    
        <td>@item3.Rice_Production_Expense_name</td>
        <td>@item3.Rice_Production_Expense_Amount</td>
    </tr>
}

                    <tr>
                        <th>ByProduct Worth</th>


                        <th>Qty</th>
                        <th>Amount</th>
                    </tr>
                    @foreach (var item4 in db.Rice_Production_ProductWorths.Where(r => r.Rice_Produce_Bags_id == producebags.Rice_Produce_Bags_id).ToList())
                    {
                        <tr>

                            <td>@item4.Rice_Production_ProductWorth_name</td>
                            <td>@item4.Rice_Production_ProductWorth_Qty</td>
                            <td>@item4.Rice_Production_ProductWorth_Amount</td>
                        </tr>
                    }


                    <tr>
                        <th>Total Bags Produce </th>

                        <th>Average</th>
                        <th>Stockworth</th>
                        <th>Factory Cost</th>
                        <th>PBP</th>
                        <th>MPBP</th>

                    </tr>
                
                        <tr>
                            <td>@producebags.Rice_Produce_TotalBagsProduce</td>
                            <td>@producebags.Rice_Produce_Bag_Average</td>
                            <td>@producebags.Rice_Produce_Bag_StockWorth</td>
                            <td>@producebags.Rice_Produce_Bag_FactoryCost</td>
                            <td>@producebags.Rice_Produce_Bag_PerBagPrice</td>
                            <td>@producebags.Rice_Produce_Bag_PerBagMarketPrice</td>
