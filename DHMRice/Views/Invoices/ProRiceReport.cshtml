                <div class="col-lg-4">
                    <p>Rice Name: @Model.Rice_Production_name</p>
                </div>
                <div class="col-lg-4"></div>
                <div class="col-lg-4">
                    <table class="meta">
                     
                        <tr>
                            <th>Date</th>
                            <td>@ViewBag.Date</td>
                        </tr>

                    </table>
                </div>
            </div>
            <table class="inventory">
                <thead>
                    <tr>
                  

                        <th>Rice used</th>
