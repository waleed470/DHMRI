@using DHMRice.Models
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_LayoutAdmin.cshtml";
    ApplicationDbContext db = new ApplicationDbContext();

    var rawRice_List = Model.ToList();
}
<script>
    CheckIntialOpening();
</script>
