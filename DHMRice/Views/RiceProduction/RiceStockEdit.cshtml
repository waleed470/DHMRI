@model DHMRice.Models.Rice_Production
@using DHMRice.Models
@{
    ViewBag.Title = "RiceStockEdit";
    Layout = "~/Views/Shared/_LayoutAdmin.cshtml";
    ApplicationDbContext db = new ApplicationDbContext();
}


<!-- Start content -->
<div class="content">
    <div class="container">


        <div class="row">
            <div class="col-xs-12">
                <div class="page-title-box">
                    <h4 class="page-title">Rice PRoduction Data Entry </h4>
                    <ol class="breadcrumb p-0 m-0">

                        <li>
                            <a href="#">Rice PRoduction </a>
                        </li>
                        <li class="active">
                            Add Stocked Rice
                        </li>
                    </ol>
                    <div class="clearfix"></div>
                </div>
            </div>
        </div>
        <!-- end row -->


        <div class="container card-box">
            <div class="">
                <div class="col-lg-1"></div>
                <div class="col-lg-10">

                    @{ var price = db.Rice_Produce_Bags.Where(p => p.Rice_Production_id == Model.Rice_Production_id).SingleOrDefault(); }

                    <div class="form-horizontal">
                        @using (Html.BeginForm("RiceStockEdit", "RiceProduction", FormMethod.Post, new { @class = "form-horizontal", role = "form" }))
                        {
                            @Html.AntiForgeryToken()
                            <div style="color:red">
                                @Html.ValidationSummary()
                            </div>
                            <input type="hidden" name="Rice_Production_id" value="@(Model.Rice_Production_id)" />


                            <div class="form-group">
                                <div class="col-md-10">
                                    <label for="Section Name">Produced Rice Name</label>
                                    <input type="text" class="form-control" name="RiceName" id="RiceName" value="@(Model.Rice_Production_name)" required>
                                </div>
                            </div>

                            <div class="form-group">
                                <div class="col-md-10">
                                    <label for="Section Name">Produced Rice Code</label>
                                    <input type="text" class="form-control" id="RiceCode" name="RiceCode" value="@(Model.Rice_Production_Code)"  required>
                                </div>
                            </div>

                            <div class="form-group">
                                <div class="col-md-10">
                                    <label for="Section Name">Totl Produced Bags</label>
                                    <input type="text" class="form-control" name="BAgs" value="@(price.Rice_Produce_TotalBagsProduce)"  required>
                                </div>
                            </div>

                            <div class="form-group">
                                <div class="col-md-10">
                                    <select name="packing" class="form-control" data-style="btn-default" required>
                                        <option value="null">Packing Type</option>

                                        <option value="1">25 kg</option>
                                        <option value="2">50 kg</option>

                                    </select>
                                </div>
                            </div>

                            <div class="form-group">
                                <div class="col-md-10">
                                    <label for="Section Name">Per Bag Price</label>
                                    <input type="text" class="form-control" name="Price"value="@(price.Rice_Produce_Bag_PerBagMarketPrice)"  required>
                                </div>
                            </div>














                            <br />

                            <div class="form-group">
                                <div class="col-md-10">

                                    <input type="submit" value="submit" class="btn btn-success" />
                                </div>
                            </div>
                        }
                    </div>


                </div>
                <div class="col-lg-1"></div>


            </div>
        </div>


    </div>
</div>





